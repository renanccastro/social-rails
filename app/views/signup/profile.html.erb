<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6 col-md-offset-3">
    <div class="well well-sm">
      <div class="row">
        <div class="col-sm-6 col-md-4">
          <img src="<%= current_user.picture_url %>" alt="" class="img-rounded img-responsive css-big-img"/>
        </div>
        <div class="col-sm-6 col-md-8">
          <h4>
            <%= current_user.name %></h4>
          <p>
            <i class="glyphicon glyphicon-envelope"></i>    <%= current_user.email %>
            <br/>
            <br/>
            <i class="glyphicon glyphicon-barcode"></i>  <%= truncate(session[:token], length:30) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


